{
    "name": "zlib",
    "description": "zlib",
    "version": [ 1,3,1 ],
    "depends": [ "cross-gcc" ],
    "url": "https://github.com/madler/zlib/releases/download/v1.3.1/zlib-1.3.1.tar.xz",
    "patches": [],
    "bootstrap-commands": [
        [ "cp", "${repo_directory}/../scripts/configure-zlib.sh", "." ],
        [ "chmod", "+x", "./configure-zlib.sh" ],
        [ "./configure-zlib.sh", "${repo_directory}/zlib-1.3.1", "${target_triplet}", "${prefix}" ]
    ],
    "build-commands": [
        [ "make" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ],
        [ "rm", "-f", "${destdir}/${prefix}/lib/libz.a" ],
        [ "rm", "-f", "${bin_package_prefix}/${prefix}/lib/libz.a" ]
    ]
}
