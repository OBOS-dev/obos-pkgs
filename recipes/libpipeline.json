{
    "name": "libpipeline",
    "description": "libpipeline",
    "version": [ 1,5,8 ],
    "url": "https://gitlab.com/libpipeline/libpipeline/-/archive/1.5.8/libpipeline-1.5.8.tar.bz2",
    "depends": [ "mlibc" ],
    "build-depends": [ "cross-gcc", "gnulib-src" ],
    "patches": [
        {
            "modifies": "libpipeline-1.5.8/bootstrap",
            "patch": "patches/libpipeline/bootstrap.patch"
        }
    ],
    "bootstrap-commands": [
        [ "cd", "${repo_directory}/libpipeline-1.5.8/" ],
        [ "./bootstrap", "--gnulib-srcdir=${repo_directory}/gnulib", "--no-git", "--bootstrap-sync" ],
        [ "cd", "${bootstrap_directory}/${name}" ],
        [ "cp", "${repo_directory}/../patches/libpipeline/config.sub", "${repo_directory}/libpipeline-1.5.8/build-aux/config.sub" ],
        [ "${repo_directory}/libpipeline-1.5.8/configure", "--prefix=${prefix}", "--host=${target_triplet}" ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
