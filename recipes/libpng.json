{
    "name": "libpng",
    "description": "libpng",
    "version": [ 1,6,50 ],
    "url": "https://cytranet-dal.dl.sourceforge.net/project/libpng/libpng16/1.6.50/libpng-1.6.50.tar.xz",
    "depends": [ "cross-gcc", "zlib>=1.2.13" ],
    "patches": [
        {
            "patch": "patches/libpng/configure.patch",
            "modifies": "libpng-1.6.50/configure"
        }
    ],
    "bootstrap-commands": [
        [ "${root_directory}/scripts/do-autoreconf.sh", "${repo_directory}/${name}-${version}" ],
        [ "${repo_directory}/${name}-${version}/configure", "--host=${target_triplet}", "--prefix=${prefix}", "--disable-static", "--enable-shared" ]
    ],
    "build-commands": [
        [ "make" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
