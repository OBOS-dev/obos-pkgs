{
    "name": "libsdl3-mixer",
    "description": "SDL3 mixer",
    "depends": [ "cross-gcc", "libsdl3", "cmake-toolchain" ],
    "git-url": "https://github.com/libsdl-org/SDL_mixer",
    "git-commit": "main",
    "patches": [
        {
            "patch": "patches/SDL3/mixer_CMakeLists.txt.patch",
            "modifies": "SDL_mixer/CMakeLists.txt"
        }
    ],
    "bootstrap-commands": [
        [ "cmake", "-B.", "-S${repo_directory}/SDL_mixer", 
          "-DCMAKE_INSTALL_PREFIX=${prefix}", 
          "--toolchain", "${bootstrap_directory}/toolchain.cmake", "-GNinja"
        ]
    ],
    "build-commands": [
        [ "cmake", "--build", ".", "--parallel=2" ]
    ],
    "install-commands": [
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ],
        [ "cd", "${bin_package_prefix}" ],
        [ "mv", "./${prefix}/*", "${bin_package_prefix}" ],
        [ "rm", "-r", "`echo ${bin_package_prefix} | cut -d/ -f2`" ]
    ]
}
