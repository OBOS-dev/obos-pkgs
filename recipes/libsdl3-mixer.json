{
    "name": "libsdl3-mixer",
    "description": "SDL3 mixer",
    "comment1": "TODO: get on a stable commit for SDL3",
    "version": [],
    "depends": [ "cross-gcc", "libsdl3>=3.3.0", "cmake-toolchain" ],
    "git-url": "https://github.com/libsdl-org/SDL_mixer",
    "git-commit": "main",
    "patches": [],
    "bootstrap-commands": [
        [ "cmake", "-B.", "-S${repo_directory}/SDL_mixer", 
          "-DCMAKE_INSTALL_PREFIX=${prefix}", "-DSDLMIXER_MIDI_NATIVE=OFF",
          "--toolchain", "${bootstrap_directory}/toolchain.cmake", "-GNinja"
        ]
    ],
    "build-commands": [
        [ "cmake", "--build", ".", "--parallel=2" ]
    ],
    "install-commands": [
        [ "export", "DESTDIR=${destdir}" ],
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ]
    ]
}
