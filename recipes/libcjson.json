{
    "name": "libcjson",
    "description": "Ultralightweight JSON parser in ANSI C",
    "version": [ 1,7,19 ],
    "depends": [ "cross-gcc", "cmake-toolchain" ],
    "git-url": "https://github.com/DaveGamble/cJSON",
    "git-commit": "v1.7.19",
    "patches": [
        {
            "modifies": "cJSON/CMakeLists.txt",
            "patch": "patches/cJSON/CMakeLists.txt.patch"
        }
    ],
    "bootstrap-commands": [
        [ "cmake", "-DCMAKE_BUILD_TYPE=Release", "-DENABLE_TARGET_EXPORT=ON", "-DCJSON_BUILD_SHARED_LIBS=ON", "-Wno-dev", "--toolchain=${bootstrap_directory}/toolchain.cmake", "-S${repo_directory}/cJSON", "-DCMAKE_INSTALL_PREFIX=${prefix}", "-DENABLE_CJSON_TEST=OFF", "-GNinja" ]
    ],
    "build-commands": [
        [ "cmake", "--build", "." ]
    ],
    "install-commands": [
        [ "export", "DESTDIR=${destdir}" ],
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ]
    ]
}
