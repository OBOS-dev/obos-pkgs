{
    "name": "libarchive",
    "description": "Multi-format archive and compression library",
    "version": [ 3,8,2 ],
    "url": "https://github.com/libarchive/libarchive/releases/download/v3.8.2/libarchive-3.8.2.tar.xz",
    "depends": [ "cross-gcc", "bzip2", "zlib", "gzip", "libexpat", "openssl" ],
    "patches": [],
    "bootstrap-commands": [
        [ "cmake", "--toolchain=${bootstrap_directory}/toolchain.cmake",
        "-GNinja", "-DCMAKE_INSTALL_PREFIX=${prefix}", "-DCMAKE_SYSROOT=${destdir}", "-Wno-dev",
        "-S${repo_directory}/${name}-${version}" ]
    ],
    "build-commands": [
        [ "cmake", "--build", "." ]
    ],
    "install-commands": [
        [ "export", "DESTDIR=${destdir}" ],
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ]
    ]
}
