{
    "name": "libmpc",
    "description": "libmpc",
    "version": [ 1,3,1 ],
    "url": "ftpmirror.gnu.org/gnu/mpc/mpc-1.3.1.tar.gz",
    "depends": [ "cross-gcc", "libmpfr", "libgmp" ],
    "patches": [
        {
            "patch": "patches/libmpc/config.sub.patch",
            "modifies": "mpc-1.3.1/build-aux/config.sub"
        }
    ],
    "bootstrap-commands": [
        [ "${root_directory}/scripts/do-autoreconf.sh", "${repo_directory}/mpc-${version}" ],
        [ 
            "${repo_directory}/mpc-1.3.1/configure",
            "--prefix", "${prefix}",
            "--host=${target_triplet}",
            "--disable-static"
	    ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ],
        [ "rm", "${destdir}/${prefix}/lib/libmpc.la" ],
        [ "rm", "${bin_package_prefix}/${prefix}/lib/libmpc.la" ]
    ]
}
