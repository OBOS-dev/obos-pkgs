{
    "name": "doomgeneric",
    "version": [],
    "description": "DOOM Video Game",
    "git-url": "https://github.com/OBOS-dev/doomgeneric",
    "git-commit": "master",
    "depends": [ "cross-gcc", "libsdl3-sound" ],
    "patches": [],
    "bootstrap-commands": [],
    "comment1": "doomgeneric does not support out-of-tree builds, so we need to use a script to cd into the right directory",
    "build-commands": [
        [ "${root_directory}/scripts/build-doom.sh", "${repo_directory}/doomgeneric", "${target_triplet}" ]
    ],
    "install-commands": [
        [ "cp", "${repo_directory}/doomgeneric/doomgeneric/doomgeneric", "${prefix}/bin/doomgeneric" ],
        [ "mkdir", "-p", "${bin_package_prefix}/usr/bin" ],
        [ "cp", "${repo_directory}/doomgeneric/doomgeneric/doomgeneric", "${bin_package_prefix}/usr/bin/doomgeneric" ]
    ]
}
