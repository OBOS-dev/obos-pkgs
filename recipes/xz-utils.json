{
    "name": "xz-utils",
    "description": "XZ Utils",
    "version": [ 5,8,1 ],
    "depends": [ "cross-gcc", "cmake-toolchain" ],
    "patches": [],
    "bootstrap-commands": [
        [ "rm", "-rf", "${repo_directory}/xz" ],
        [ "git", "clone", "--depth=1", "--branch=v${version}", "https://git.tukaani.org/xz.git", "${repo_directory}/xz" ],
        [ "cmake", "-B", ".", "-DBUILD_SHARED_LIBS=ON", "--toolchain=${bootstrap_directory}/toolchain.cmake", "-DCMAKE_INSTALL_PREFIX=/usr", "-GNinja", "-S", "${repo_directory}/xz/" ]
    ],
    "build-commands": [
        [ "cmake", "--build", "." ]
    ],
    "install-commands": [
        [ "export", "DESTDIR=${destdir}" ],
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ]
    ]
}
