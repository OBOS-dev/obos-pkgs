{
    "name": "obos-strap",
    "description": "Yet another build tool for operating systems",
    "depends": [ "cross-gcc", "libcjson", "cmake-toolchain" ],
    "patches": [],
    "git-url": "https://github.com/OBOS-dev/obos-strap",
    "git-commit": "master",
    "bootstrap-commands": [
        [ "cmake", "--toolchain=${bootstrap_directory}/toolchain.cmake",
        "-GNinja",
        "-S${repo_directory}/obos-strap" ]
    ],
    "build-commands": [
        [ "cmake", "--build", "." ]
    ],
    "install-commands": [
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ],
        [ "cd", "${bin_package_prefix}" ],
        [ "mv", "./${prefix}/*", "${bin_package_prefix}" ],
        [ "rm", "-r", "`echo ${bin_package_prefix} | cut -d/ -f2`" ]
    ]
}
