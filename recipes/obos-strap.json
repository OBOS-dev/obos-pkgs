{
    "name": "obos-strap",
    "description": "Yet another build tool for operating systems",
    "version": [],
    "depends": [ "cross-gcc", "libcjson", "cmake-toolchain", "curl" ],
    "patches": [],
    "git-url": "https://github.com/OBOS-dev/obos-strap",
    "git-commit": "master",
    "bootstrap-commands": [
        [ "cmake", "--toolchain=${bootstrap_directory}/toolchain.cmake",
        "-GNinja", "-DCMAKE_INSTALL_PREFIX=${prefix}", "-DCMAKE_SYSROOT=${destdir}",
        "-S${repo_directory}/obos-strap" ]
    ],
    "build-commands": [
        [ "cmake", "--build", "." ]
    ],
    "install-commands": [
        [ "export", "DESTDIR=${destdir}" ],
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ]
    ]
}
