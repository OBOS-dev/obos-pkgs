{
    "name": "openssh",
    "description": "OpenSSH",
    "version": [ 9,7,1 ],
    "url": "https://cdn.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-9.7p1.tar.gz",
    "depends": [ "cross-gcc", "openssl", "zlib" ],
    "patches": [
	    {
            "patch": "patches/openssh/config.sub.patch",
            "modifies": "openssh-9.7p1/config.sub"
        },
	    {
            "patch": "patches/openssh/sshd.c.patch",
            "modifies": "openssh-9.7p1/sshd.c"
        }
    ],
    "bootstrap-commands": [
        [ "${repo_directory}/openssh-9.7p1/configure", "--host=${target_triplet}", "--sysconfdir=/etc/ssh", "--with-privsep-path=/var/lib/ssh", "--with-default-path=/usr/bin", "--with-superuser-path=/usr/sbin:/usr/bin", "--prefix=${prefix}" ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install", "PRIVSEP_PATH=${destdir}/var/lib/ssh", "sysconfdir=${destdir}/etc/ssh", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}