{
    "name": "libxcursor",
    "description": "...",
    "url": "https://www.x.org/archive//individual/lib/libXcursor-1.2.1.tar.xz",
    "version": [ 1,2,1 ],
    "depends": [ "mlibc", "libxrender", "libx11", "libxfixes" ],
    "build-depends": [ "cross-gcc" ],
    "patches": [],
    "bootstrap-commands": [
        [ "${root_directory}/scripts/do-autoreconf.sh", "${repo_directory}/libXcursor-${version}" ],
        [ "${repo_directory}/libXcursor-${version}/configure", "--host=${target_triplet}", "--prefix=${prefix}", "--with-sysroot=${destdir}", "--disable-malloc0returnsnull" ]
    ],
    "build-commands": [
        [ "make", "-j${nproc}" ]
    ],
    "install-commands": [
        [ "make", "-j${nproc}", "install", "DESTDIR=${destdir}" ],
        [ "make", "-j${nproc}", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
