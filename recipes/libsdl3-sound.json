{
    "name": "libsdl3-sound",
    "description": "An abstract soundfile decoder",
    "version": [],
    "depends": [ "mlibc", "libsdl3" ],
    "build-depends": [ "cross-gcc", "cmake-toolchain" ],
    "git-url": "https://github.com/icculus/SDL_sound",
    "git-commit": "main",
    "patches": [],
    "bootstrap-commands": [
        [ "cmake", "-B.", "-S${repo_directory}/SDL_sound",
          "-DCMAKE_INSTALL_PREFIX=${prefix}",
          "--toolchain", "${bootstrap_directory}/toolchain.cmake",
          "-DSDLSOUND_DECODER_MIDI:BOOL=ON", "-GNinja"
        ]
    ],
    "build-commands": [
        [ "cmake", "--build", ".", "--parallel=2" ]
    ],
    "install-commands": [
        [ "export", "DESTDIR=${destdir}" ],
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ]
    ]
}
