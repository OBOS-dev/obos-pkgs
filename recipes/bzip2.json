{
    "name": "bzip2",
    "description": "bzip2",
    "version": [ 1,0,8 ],
    "depends": [ "cross-gcc" ],
    "patches": [],
    "url": "https://sourceware.org/pub/bzip2/bzip2-1.0.8.tar.gz",
    "bootstrap-commands": [
        [ "cp", "-rpf", "${repo_directory}/${name}-${version}/*", "." ]
    ],
    "build-commands": [
        [ "make", "-f", "Makefile-libbz2_so", "CC=${target_triplet}-gcc" ],
        [ "make", "clean" ],
        [ "make", "-j${nproc}", "CC=${target_triplet}-gcc", "libbz2.a", "bzip2", "bzip2recover" ]
    ],
    "install-commands": [
        [ "${root_directory}/scripts/install-bzip2.sh", "${destdir}/${prefix}" ],
        [ "${root_directory}/scripts/install-bzip2.sh", "${bin_package_prefix}/${prefix}" ]
    ]
}
