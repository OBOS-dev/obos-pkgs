{
    "name": "libffi",
    "description": "A portable foreign-function interface library. ",
    "version": [ 3,5,2 ],
    "depends": [ "cross-gcc" ],
    "url": "https://github.com/libffi/libffi/releases/download/v3.5.2/libffi-3.5.2.tar.gz",
    "patches": [
        {
            "patch": "patches/libffi/config.sub.patch",
            "modifies": "libffi-3.5.2/config.sub"
        },
        {
            "patch": "patches/libffi/configure.patch",
            "modifies": "libffi-3.5.2/configure"
        }
    ],
    "bootstrap-commands": [
        [ "${repo_directory}/libffi-3.5.2/configure", "--host=${target_triplet}", "--prefix=${prefix}", "--disable-static", "--enable-shared" ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
