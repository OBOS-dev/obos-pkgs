{
    "name": "xorgproto",
    "description": "only god knows the description...",
    "version": [ 0,2024,1 ],
    "url": "https://xorg.freedesktop.org/archive/individual/proto/xorgproto-2024.1.tar.xz",
    "depends": [ "cross-gcc", "meson-crossfile" ],
    "patches": [
        {
            "patch": "patches/xorgproto/Xos.h.patch",
            "modifies": "xorgproto-2024.1/include/X11/Xos.h"
        },
        {
            "patch": "patches/xorgproto/Xfuncs.h.patch",
            "modifies": "xorgproto-2024.1/include/X11/Xfuncs.h"
        }
    ],
    "bootstrap-commands": [
        [ "meson", "setup", "--cross-file=${bootstrap_directory}/meson-crossfile.txt", "--prefix=/usr", "-Dlegacy=true", "${repo_directory}/${name}-2024.1" ]
    ],
    "build-commands": [
        [ "meson", "compile" ]
    ],
    "install-commands": [
        [ "meson", "install", "--destdir=${prefix}" ],
        [ "meson", "install", "--destdir=${bin_package_prefix}" ]
    ]
}
