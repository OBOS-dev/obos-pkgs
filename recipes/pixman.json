{
    "name": "pixman",
    "description": "Image processing and manipulation library",
    "version": [ 0,0,0 ],
    "git-url": "https://gitlab.freedesktop.org/pixman/pixman",
    "git-commit": "master",
    "depends": [ "cross-gcc", "meson-crossfile", "libpng" ],
    "patches": [],
    "bootstrap-commands": [
        [ "meson", "setup", "--cross-file=${bootstrap_directory}/meson-crossfile.txt", "--prefix=${prefix}", "${repo_directory}/${name}" ]
    ],
    "build-commands": [
        [ "meson", "compile" ]
    ],
    "install-commands": [
        [ "meson", "install", "--destdir=${destdir}" ],
        [ "meson", "install", "--destdir=${bin_package_prefix}" ]
    ]
}
