{
    "name": "libxmu",
    "description": "...",
    "version": [ 1,2,1 ],
    "url": "https://www.x.org/releases/individual/lib/libXmu-1.2.1.tar.xz",
    "depends": [ "mlibc", "libx11", "libxt", "libxext" ],
    "build-depends": [ "cross-gcc", "xorgproto" ],
    "patches": [],
    "bootstrap-commands": [
        [ "${root_directory}/scripts/do-autoreconf.sh", "${repo_directory}/libXmu-${version}" ],
        [ "${repo_directory}/libXmu-${version}/configure", "--host=${target_triplet}", "--prefix=${prefix}", "--disable-malloc0returnsnull", "--disable-static", "--enable-shared" ]
    ],
    "build-commands": [
        [ "make" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
