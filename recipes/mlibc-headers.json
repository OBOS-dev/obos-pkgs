{
    "name": "mlibc-headers",
    "description": "mlibc header files",
    "git-url": "https://github.com/OBOS-dev/mlibc",
    "git-commit": "master",
    "depends": [ "linux-kernel-headers" ],
    "patches": [
        {
            "patch": "patches/generate-mlibc-cross-file.sh.patch",
            "modifies": "mlibc/generate-mlibc-cross-file.sh"
        }
    ],
    "bootstrap-commands": [
        [ "chmod", "+x", "${repo_directory}/mlibc/generate-mlibc-cross-file.sh" ],
    	[ "${repo_directory}/mlibc/generate-mlibc-cross-file.sh", "${target_triplet}", "${host_prefix}/bootstrap-gcc/bin/bootstrap" ],
        [ "rmdir", "${bin_package_prefix}" ],
	    [
            "meson",
            "setup",
            ".", "${repo_directory}/mlibc/",
            "--cross-file", "../cross-file.txt",
            "--prefix", "${prefix}",
            "--buildtype", "debugoptimized",
	        "-Duse_freestnd_hdrs=enabled",
            "--wipe",
            "-Dheaders_only=true",
            "-Dlinux_kernel_headers=${prefix}/include"
        ],
        [ "mkdir", "${bin_package_prefix}" ]
    ],
    "build-commands": [],
    "install-commands": [
        [ "meson", "install" ],
        [ "meson", "configure", "--prefix", "${bin_package_prefix}/usr" ],
        [ "meson", "install" ],
        [ "meson", "configure", "--prefix", "${prefix}" ],
        [ "mkdir", "${prefix}/usr" ],
        [ "rm", "${prefix}/usr/include" ],
        [ "ln", "-s", "${prefix}/include", "${prefix}/usr/include" ]
    ]
}
