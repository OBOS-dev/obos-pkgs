{
    "name": "libuuid",
    "description": "Portable UUID C Library",
    "version": [ 1,0,3 ],
    "depends": [ "cross-gcc" ],
    "url": "https://cytranet-dal.dl.sourceforge.net/project/libuuid/libuuid-1.0.3.tar.gz",
    "patches": [
        {
            "patch": "patches/libuuid/config.sub.patch",
            "modifies": "libuuid-1.0.3/config.sub"
        },
        {
            "patch": "patches/libuuid/randutils.c.patch",
            "modifies": "libuuid-1.0.3/randutils.c"
        },
        {
            "patch": "patches/libuuid/configure.patch",
            "modifies": "libuuid-1.0.3/configure"
        }
    ],
    "bootstrap-commands": [
        [ "${repo_directory}/libuuid-1.0.3/configure", "--host=${target_triplet}", "--prefix=/usr", "--disable-static", "--enable-shared" ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${prefix}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
