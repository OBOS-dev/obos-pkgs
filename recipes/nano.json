{
    "name": "nano",
    "description": "NANO Text Editor",
    "depends": [ "mlibc", "ncurses" ],
    "build-depends": [ "cross-gcc" ],
    "version": [ 8,6 ],
    "url": "https://www.nano-editor.org/dist/v8/nano-8.6.tar.xz",
    "patches": [],
    "bootstrap-commands": [
        [ "${root_directory}/scripts/do-autoreconf.sh", "${repo_directory}/nano-8.6/" ],
        [ "${repo_directory}/nano-8.6/configure", "gl_cv_func_strcasecmp_works=true", "--disable-libmagic", "--prefix=${prefix}", "--sysconfdir=/etc", "--host=${target_triplet}" ]
    ],
    "build-commands": [
        [ "make", "all", "LIBS= -lncursesw -ltinfow " ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}"],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
