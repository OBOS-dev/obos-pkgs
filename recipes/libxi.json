{
    "name": "libxi",
    "description": "...",
    "version": [ 1,8,1 ],
    "url": "https://www.x.org/archive/individual/lib/libXi-1.8.1.tar.xz",
    "depends": [ "cross-gcc", "libx11", "libxext", "libxfixes" ],
    "patches": [],
    "bootstrap-commands": [
        [ "${root_directory}/scripts/do-autoreconf.sh", "${repo_directory}/libXi-${version}" ],
        [ "${repo_directory}/libXi-${version}/configure", "--host=${target_triplet}", "--prefix=${prefix}", "--disable-malloc0returnsnull", "--disable-static", "--enable-shared" ]
    ],
    "build-commands": [
        [ "make" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
