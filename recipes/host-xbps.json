{
    "name": "host-xbps",
    "description": "Host XBPS for systems without it",
    "version": [ 0,60,5 ],
    "depends": [ "xbps-src" ],
    "build-depends": [],
    "patches": [],
    "bootstrap-commands": [
        [ "cd", "${repo_directory}/xbps/" ],
        [ "unset", "PKG_CONFIG_SYSROOT_DIR" ],
        [ "unset", "PKG_CONFIG_PATH" ],
        [ "export", "ACLOCAL_PATH=/usr/share/aclocal/" ],
        [ "make", "clean" ],
        [ "./configure", "--prefix=/", "--enable-rpath" ],
        [ "cd", "${bootstrap_directory}/${name}/" ]
    ],
    "build-commands": [
        [ "cd", "${repo_directory}/xbps/" ],
        [ "make", "all" ],
        [ "cd", "${bootstrap_directory}/${name}/" ]
    ],
    "install-commands": [
        [ "cd", "${repo_directory}/xbps/" ],
        [ "make", "install", "DESTDIR=${prefix}" ],
        [ "cd", "${bootstrap_directory}/${name}/" ]
    ],
    "host-package": true
}
