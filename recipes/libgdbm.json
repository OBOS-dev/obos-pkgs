{
    "name": "libgdbm",
    "description": "GNU dbm.",
    "version": [ 1,25,0 ],
    "url": "https://mirror.csclub.uwaterloo.ca/gnu/gdbm/gdbm-1.25.tar.gz",
    "depends": [ "cross-gcc" ],
    "patches": [
        {
            "patch": "patches/gdbm/config.sub.patch",
            "modifies": "gdbm-1.25/build-aux/config.sub"
        },
        {
            "patch": "patches/gdbm/var.c.patch",
            "modifies": "gdbm-1.25/tools/var.c"
        },
        {
            "patch": "patches/gdbm/gdbmapp.h.patch",
            "modifies": "gdbm-1.25/tools/gdbmapp.h"
        },
        {
            "patch": "patches/gdbm/configure.patch",
            "modifies": "gdbm-1.25/configure"
        }
    ],
    "bootstrap-commands": [
        [ "${repo_directory}/gdbm-1.25/configure", "--prefix", "${prefix}", "--host=${target_triplet}", "--disable-static", "--enable-libgdbm-compat", "--disable-nls", "--without-readline" ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "DESTDIR=${destdir}", "install" ],
        [ "make", "DESTDIR=${bin_package_prefix}", "install" ]
    ]
}
