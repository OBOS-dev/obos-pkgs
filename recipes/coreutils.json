{
    "name": "coreutils",
    "description": "GNU Coreutils",
    "url": "https://mirror.csclub.uwaterloo.ca/gnu/coreutils/coreutils-9.5.tar.xz",
    "depends": [ "cross-gcc" ],
    "patches": [
        {
            "patch": "patches/coreutils/config.sub.patch",
            "modifies": "coreutils-9.5/build-aux/config.sub"
        }
    ],
    "bootstrap-commands": [
        [ "${root_directory}/scripts/configure-coreutils.sh", "${repo_directory}", "${prefix}", "${target_triplet}" ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install" ],
        [ "make", "prefix=${bin_package_prefix}/usr", "install" ]
    ]
}
