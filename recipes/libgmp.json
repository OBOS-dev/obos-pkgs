{
    "name": "libgmp",
    "description": "GNU MP Bignum Library",
    "version": [ 6,3,0 ],
    "url": "https://gmplib.org/download/gmp/gmp-6.3.0.tar.lz",
    "depends": [ "cross-gcc" ],
    "patches": [
	    {
            "patch": "patches/libgmp/configfsf.sub.patch",
            "modifies": "gmp-6.3.0/configfsf.sub"
        }
    ],
    "bootstrap-commands": [
        [ 
            "${repo_directory}/gmp-6.3.0/configure",
		    "--prefix", "${prefix}",
		    "--host=${target_triplet}" 
        ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install" ],
        [ "make", "prefix=${bin_package_prefix}/usr", "install" ]
    ]
}
