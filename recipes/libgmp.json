{
    "name": "libgmp",
    "description": "GNU MP Bignum Library",
    "version": [ 6,3,0 ],
    "url": "https://gmplib.org/download/gmp/gmp-6.3.0.tar.lz",
    "depends": [ "mlibc" ],
    "build-depends": [ "cross-gcc" ],
    "patches": [
	    {
            "patch": "patches/libgmp/configfsf.sub.patch",
            "modifies": "gmp-6.3.0/configfsf.sub"
        }
    ],
    "bootstrap-commands": [
        [ "${root_directory}/scripts/do-autoreconf.sh", "${repo_directory}/gmp-${version}" ],
        [ 
            "${repo_directory}/gmp-6.3.0/configure",
		    "--prefix", "${prefix}", "--exec-prefix=${prefix}",
		    "--host=${target_triplet}",
            "--disable-static"
        ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ],
        [ "rm", "${destdir}/${prefix}/lib/libgmp.la" ],
        [ "rm", "${bin_package_prefix}/${prefix}/lib/libgmp.la" ]
    ]
}
