{
    "name": "xorg-server-video-fbdev",
    "description": "Xorg Server",
    "version": [ 0,5,0 ],
    "url": "https://www.x.org/pub/individual/driver/xf86-video-fbdev-0.5.0.tar.bz2",
    "depends": [ "cross-gcc", "xorg-server"],
    "patches": [
        {
            "patch": "patches/xorg-server-video-fbdev/fbdev.c.patch",
            "modifies": "xf86-video-fbdev-0.5.0/src/fbdev.c"
        },
        {
            "patch": "patches/xorg-server-video-fbdev/configure.ac.patch",
            "modifies": "xf86-video-fbdev-0.5.0/configure.ac"
        }
    ],
    "bootstrap-commands": [
        [ "${root_directory}/scripts/do-autoreconf.sh", "${repo_directory}/xf86-video-fbdev-${version}" ],
        [ "${repo_directory}/xf86-video-fbdev-${version}/configure", "--host=${target_triplet}", "--prefix=${prefix}", "--with-sysroot=${destdir}", "--disable-pciaccess", "--disable-static", "--enable-shared" ],
        [ "cp", "-f", "${root_directory}/patches/${name}/config.h.new", "${bootstrap_directory}/${name}/config.h" ]
    ],
    "build-commands": [
        [ "make", "-j${nproc}" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
