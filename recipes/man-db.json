{
    "name": "man-db",
    "description": "Manual Pager",
    "version": [ 2,13,1 ],
    "comment1": "if you change this to a different mirror, do make sure it works first...",
    "url": "mirror.csclub.uwaterloo.ca/nongnu/man-db/man-db-2.13.1.tar.xz",
    "depends": [ "mlibc", "libpipeline", "groff", "libgdbm" ],
    "build-depends": [ "cross-gcc" ],
    "patches": [
    ],
    "bootstrap-commands": [
        [ "cp", "${repo_directory}/../patches/libpipeline/config.sub", "${repo_directory}/man-db-2.13.1/build-aux/config.sub" ],
        [ 
            "${repo_directory}/man-db-2.13.1/configure",
            "--prefix", "${prefix}",
            "--host=${target_triplet}",
            "--disable-manual", "--disable-setuid", "--disable-nls", 
            "--docdir=${prefix}/share/doc/man-db-2.9.4",
            "--with-pager=${prefix}/bin/less",
            "--sysconfdir=/etc"
        ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
