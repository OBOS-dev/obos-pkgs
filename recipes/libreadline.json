{
    "name": "libreadline",
    "description": "Readline",
    "version": [ 8,3,0 ],
    "url": "ftp://ftp.cwru.edu/pub/bash/readline-8.3.tar.gz",
    "depends": [ "cross-gcc", "ncurses" ],
    "patches": [
        {
            "patch": "patches/readline/config.sub.patch",
            "modifies": "readline-8.3/support/config.sub"
        }
    ],
    "bootstrap-commands": [
        [ "${repo_directory}/readline-8.3/configure", "--prefix", "${prefix}", "--host=${target_triplet}", "--enable-multibyte", "--disable-static", "--enable-shared" ]
    ],
    "build-commands": [
        [ "make", "SHLIB_LIBS=-lncursesw" ]
    ],
    "install-commands": [
        [ "make", "SHLIB_LIBS=-lncursesw", "install", "DESTDIR=${destdir}"  ],
        [ "make", "SHLIB_LIBS=-lncursesw", "install", "DESTDIR=${bin_package_prefix}" ],
        [ "ln", "-s", "${destdir}/lib/libreadline.so.8", "${destdir}/lib/libreadline.so" ],
        [ "ln", "${bin_package_prefix}/${prefix}/lib/libreadline.so.8", "${bin_package_prefix}/${prefix}/lib/libreadline.so" ]
    ]
}
