{
    "name": "libglm",
    "description": "OpenGL Mathematics (GLM)",
    "version": [ 1,0,1 ],
    "git-url": "https://github.com/g-truc/glm",
    "git-commit": "1.0.1",
    "depends": [ "cross-gcc", "cmake-toolchain" ],
    "patches": [],
    "bootstrap-commands": [
        [ "cmake",
            "-S${repo_directory}/glm", "-B.",
            "-DGLM_BUILD_TESTS=OFF", "-DBUILD_SHARED_LIBS=OFF",
            "-DCMAKE_INSTALL_PREFIX=${prefix}",
            "--toolchain=${bootstrap_directory}/toolchain.cmake",
            "-GNinja" ]
    ],
    "build-commands": [
        [ "cmake", "--build", "." ]
    ],
    "install-commands": [
        [ "export", "DESTDIR=${destdir}" ],
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ]
    ]
}
