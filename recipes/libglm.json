{
    "name": "libglm",
    "description": "OpenGL Mathematics (GLM)",
    "git-url": "https://github.com/g-truc/glm",
    "git-commit": "1.0.1",
    "depends": [ "cross-gcc" ],
    "patches": [
        {
            "patch": "patches/SDL3/toolchain.cmake.patch",
            "modifies": "glm/toolchain.cmake"
        }
    ],
    "bootstrap-commands": [
        [ "cmake",
            "-S${repo_directory}/glm", "-B.",
            "-DGLM_BUILD_TESTS=OFF", "-DBUILD_SHARED_LIBS=OFF",
            "-DCMAKE_INSTALL_PREFIX=${prefix}",
            "--toolchain=${repo_directory}/glm/toolchain.cmake",
            "-GNinja" ]
    ],
    "build-commands": [
        [ "cmake", "--build", "." ]
    ],
    "install-commands": [
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ],
        [ "cd", "${bin_package_prefix}" ],
        [ "mv", "./${prefix}/*", "${bin_package_prefix}" ],
        [ "rm", "-r", "`echo ${bin_package_prefix} | cut -d/ -f2`" ]
    ]
}
