{
    "name": "grep",
    "description": "Searches for a string in input file(s).",
    "version": [ 3,11,0 ],
    "url": "https://ftpmirror.gnu.org/gnu/grep/grep-3.11.tar.xz",
    "depends": [ "mlibc" ],
    "build-depends": [ "cross-gcc" ],
    "patches": [
        {
            "patch": "patches/grep/config.sub.patch",
            "modifies": "grep-3.11/build-aux/config.sub"
        }
    ],
    "bootstrap-commands": [
        [ "${repo_directory}/grep-3.11/configure", "--prefix", "${prefix}", "--host=${target_triplet}" ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
