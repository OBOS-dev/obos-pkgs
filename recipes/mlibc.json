{
    "name": "mlibc",
    "description": "Portable C standard library",
    "version": [],
    "comment1": "TODO: Depend on libgcc binaries? (for that we would need libgcc SO libraries in the first place...)",
    "depends": [],
    "build-depends": [ "bootstrap-gcc", "bootstrap-binutils", "mlibc-headers" ],
    "patches": [],
    "bootstrap-commands": [
        [ "rmdir", "${bin_package_prefix}" ],
	    [
            "meson",
            "setup",
            ".", "${repo_directory}/mlibc/",
            "--cross-file", "../mlibc-cross-file.txt",
            "--prefix", "${prefix}",
            "--buildtype", "release",
	        "-Duse_freestnd_hdrs=enabled",
            "--wipe",
            "-Dlinux_kernel_headers=${destdir}/${prefix}/include",
            "-Dno_headers=true"
        ],
        [ "mkdir", "${bin_package_prefix}" ]
    ],
    "build-commands": [
        [ "meson", "compile" ]
    ],
    "install-commands": [
        [ "meson", "install", "--destdir=${destdir}" ],
        [ "meson", "install", "--destdir=${bin_package_prefix}" ]
    ]
}
