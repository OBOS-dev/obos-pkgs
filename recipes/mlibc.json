{
    "name": "mlibc",
    "description": "Portable C standard library",
    "depends": [ "bootstrap-gcc", "bootstrap-binutils", "mlibc-headers" ],
    "patches": [],
    "bootstrap-commands": [
	    [
            "meson",
            "setup",
            ".", "${repo_directory}/mlibc/",
            "--cross-file", "../cross-file.txt",
            "--prefix", "${prefix}",
            "--buildtype", "debugoptimized",
	        "-Duse_freestnd_hdrs=enabled",
            "--wipe",
            "-Dlinux_kernel_headers=${prefix}/include",
            "-Dno_headers=true"
        ]
    ],
    "build-commands": [
        [ "meson", "compile" ]
    ],
    "install-commands": [
        [ "meson", "install" ],
        [ "meson", "configure", "--prefix", "${bin_package_prefix}/usr" ],
        [ "meson", "install" ],
        [ "meson", "configure", "--prefix", "${prefix}" ],
        [ "rm", "-rf", "${prefix}/usr" ],
        [ "mkdir", "${prefix}/usr" ],
        [ "rm", "-rf", "${prefix}/usr/include" ],
        [ "rm", "-rf", "${prefix}/usr/lib" ],
        [ "ln", "-s", "${prefix}/include", "${prefix}/usr" ],
        [ "ln", "-s", "${prefix}/lib", "${prefix}/usr" ]
    ]
}
