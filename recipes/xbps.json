{
    "name": "xbps",
    "description": "X Binary Package System",
    "version": [ 0,60,5 ],
    "depends": [ "libarchive", "openssl" ],
    "build-depends": [ "cross-gcc", "xbps-src" ],
    "patches": [],
    "bootstrap-commands": [
        [ "cd", "${repo_directory}/${name}/" ],
        [ "./configure", "--prefix=${prefix}", "--enable-rpath", "--sysconfdir=/etc", "--host=x86_64-obos" ],
        [ "cd", "${bootstrap_directory}/${name}/" ]
    ],
    "build-commands": [
        [ "cd", "${repo_directory}/${name}/" ],
        [ "make", "all" , "CFLAGS=-D__linux__=1 -fPIC", "LIBFETCH_CPPFLAGS = -DFTP_COMBINE_CWDS -DWITH_SSL" ],
        [ "cd", "${bootstrap_directory}/${name}/" ]
    ],
    "install-commands": [
        [ "cd", "${repo_directory}/${name}/" ],
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "rm", "-f", "${destdir}/usr/share/xbps.d/00-repository-main.conf" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ],
        [ "rm", "-f", "${bin_package_prefix}/usr/share/xbps.d/00-repository-main.conf" ],
        [ "cd", "${bootstrap_directory}/${name}/" ]
    ]
}
