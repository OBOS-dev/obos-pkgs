{
    "name": "xbps",
    "description": "X Binary Package System",
    "version": [ 0,60,5 ],
    "depends": [ "cross-gcc", "xbps-src", "libarchive", "openssl" ],
    "patches": [],
    "bootstrap-commands": [
        [ "cd", "${repo_directory}/${name}/" ],
        [ "./configure", "--prefix=${prefix}", "--enable-rpath", "--sysconfdir=/etc", "--host=x86_64-obos" ],
        [ "cd", "${bootstrap_directory}/${name}/" ]
    ],
    "build-commands": [
        [ "cd", "${repo_directory}/${name}/" ],
        [ "make", "all" , "CFLAGS=-D__linux__=1 -fPIC" ],
        [ "cd", "${bootstrap_directory}/${name}/" ]
    ],
    "install-commands": [
        [ "cd", "${repo_directory}/${name}/" ],
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ],
        [ "cd", "${bootstrap_directory}/${name}/" ]
    ]
}
