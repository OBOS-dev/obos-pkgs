{
    "name": "libcglm",
    "description": "C OpenGL Mathematics (GLM)",
    "git-url": "https://github.com/recp/cglm",
    "git-commit": "v0.9.6",
    "depends": [ "cross-gcc" ],
    "patches": [
        {
            "patch": "patches/SDL3/toolchain.cmake.patch",
            "modifies": "cglm/toolchain.cmake"
        }
    ],
    "bootstrap-commands": [
        [ "cmake",
            "-S${repo_directory}/cglm", "-B.",
            "-DCGLM_USE_TEST=OFF", "-DCGLM_SHARED=OFF", "-DCGLM_STATIC=OFF",
            "-DCMAKE_INSTALL_PREFIX=/",
            "--toolchain=${repo_directory}/cglm/toolchain.cmake",
            "-GNinja" ]
    ],
    "build-commands": [
        [ "cmake", "--build", "." ]
    ],
    "install-commands": [
        [ "export", "DESTDIR=${prefix}" ],
        [ "cmake", "--install", "." ],
        [ "export", "DESTDIR=${bin_package_prefix}" ],
        [ "cmake", "--install", "." ]
    ]
}
