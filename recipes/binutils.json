{
    "name": "binutils",
    "description": "Cross-compiler used to link packages.",
    "depends": [ "mlibc" ],
    "build-depends": [ "cross-gcc" ],
    "patches": [],
    "version": [ 2,42,0 ],
    "bootstrap-commands": [
        [ "unset", "ACLOCAL_PATH" ],
        [ "unset", "PKG_CONFIG_PATH" ],
        [ "unset", "PKG_CONFIG_SYSROOT_DIR" ],
        [
            "${repo_directory}/binutils-2.42/configure",
            "--prefix=${prefix}",
        	"--host=${target_triplet}",
            "--disable-nls",
            "--with-build-sysroot=${destdir}",
            "--disable-werror"
        ]
    ],
    "build-commands": [
        [ "unset", "ACLOCAL_PATH" ],
        [ "unset", "PKG_CONFIG_PATH" ],
        [ "unset", "PKG_CONFIG_SYSROOT_DIR" ],
        [ "make", "-j${nproc}" ]
    ],
    "install-commands": [
        [ "unset", "ACLOCAL_PATH" ],
        [ "unset", "PKG_CONFIG_PATH" ],
        [ "unset", "PKG_CONFIG_SYSROOT_DIR" ],
        [ "make", "-j${nproc}", "install-strip", "DESTDIR=${destdir}" ],
        [ "make", "-j${nproc}", "install-strip", "DESTDIR=${bin_package_prefix}" ]
    ],
    "inhibit-auto-rebuild": true
}
