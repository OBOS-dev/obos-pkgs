{
    "name": "binutils",
    "description": "Cross-compiler used to link packages.",
    "depends": [ "mlibc" ],
    "build-depends": [ "cross-gcc" ],
    "patches": [],
    "version": [ 2,42,0 ],
    "bootstrap-commands": [
        [
            "${repo_directory}/binutils-2.42/configure",
            "--target=${target_triplet}",
            "--prefix=${prefix}",
        	"--host=${target_triplet}",
            "--disable-nls",
            "--with-build-sysroot=${prefix}",
            "--disable-werror"
        ]  
    ],
    "build-commands": [
        [ "make", "-j${nproc}" ]
    ],
    "install-commands": [
        [ "make", "-j${nproc}", "install-strip", "DESTDIR=${destdir}" ],
        [ "make", "-j${nproc}", "install-strip", "DESTDIR=${bin_package_prefix}" ]
    ],
    "inhibit-auto-rebuild": true
}
