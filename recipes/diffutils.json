{
    "name": "diffutils",
    "description": "Finds differences between files",
    "version": [ 3,10,0 ],
    "url": "ftpmirror.gnu.org/gnu/diffutils/diffutils-3.10.tar.xz",
    "depends": [ "cross-gcc" ],
    "patches": [
        {
            "patch": "patches/diffutils/config.sub.patch",
            "modifies": "diffutils-3.10/build-aux/config.sub"
        }
    ],
    "bootstrap-commands": [
        [ "${repo_directory}/diffutils-3.10/configure", "--prefix", "${prefix}", "--host=${target_triplet}" ]
    ],
    "build-commands": [
        [ "make", "all" ]
    ],
    "install-commands": [
        [ "make", "install", "DESTDIR=${destdir}" ],
        [ "make", "install", "DESTDIR=${bin_package_prefix}" ]
    ]
}
